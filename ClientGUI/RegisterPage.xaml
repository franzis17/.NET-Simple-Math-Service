<Page x:Class="ClientGUI.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientGUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid Background="White">
        <Label x:Name="RegisterLabel" Content="Register" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,50,0,0" FontWeight="Bold" FontSize="24"/>
        <Label Content="Username" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,60,120"/>
        <Label Content="Password" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0,20,60,0"/>
        <TextBox x:Name="RegUserTxtBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Margin="0,0,0,70"/>
        <TextBox x:Name="RegPassTxtBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Margin="0,70,0,0"/>
        <Button x:Name="RegUserBtn" Content="Register" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,140,73,0" Click="RegUserBtn_Click"/>
        <Label x:Name="RegStatusLabel" Content="Register Status" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF139A00" Margin="0,220,0,0"/>
        <ProgressBar x:Name="Reg_ProgBar" HorizontalAlignment="Center" Height="10" VerticalAlignment="Center" Width="100" Margin="0,250,0,0"/>
    </Grid>
</Page>
